                          <% }) %>
                        </select> -->
                        <select class="form-control" name="category">
                        
                          <option disabled selected >Select Category</option>
                         
                          <option>STUDENT PORTAL ACCESS</option>
                          <option>STAFF PORTAL ACCESS</option>
                          <option>NEW OASIS ACCOUNT</option>
                          <option>OASIS ACCOUNT RESET</option>
                          <option>UCC EMAIL PASSWORD RESET</option>
                          <option>UCC EMAIL ACTIVATION</option>
                          <option>STAFF DETAILS UPDATE</option>
                          <option>STAFF LEAVE</option>
                          <option>STAFF ID CARD</option>
                          <option>STUDENT ID CARD</option>
                          <option>STUDENT DETAILS UPDATE</option>
                          <option>COURSES REGISTRATION</option>
                          <option>COURSE GROUPING</option>
                          <option>HALL PLACEMENT</option>
                          <option>STUDENTS RESULTS</option>
                          <option>EXAMS TIMETABLE</option>

                         
                        </select>
                     </div>
                    <div class="form-group col-md-6">
                       <label for="problem">DETAILS</label>
                       <textarea type="text" name="problem" class="form-control" id="" placeholder="Give a brief description of your problem"></textarea>
                    </div>
                  </div>
                  
                  
                 <!--  <div class="form-group mb-0">
                    <div class="custom-control custom-checkbox">
