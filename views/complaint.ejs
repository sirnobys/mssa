    <section class="content">
      <div class="container-fluid ">

        <hr>
        <h1 class="text-center mt-3 text-white"> <span class="col-md-10"><img src="/images/ucc.png" width="3%" class="img-fluid" align="success"></span>UCC COMPLAINT PORTAL</h1>
        <hr>
        <div class="row">
          <!-- left column -->
          <div class="col-md-2"></div>
          <div class="col-md-8">
            <!-- jquery validation -->
            <div class="card card-primary">
              <div class="card-header bstyle card-title">
                <center>FILL IN THE FIELDS BELOW</center>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form id="quickForm" action="/insert" method="post">
                <div class="card-body">
                  <div class="form-row">
                    <div class="form-group col-md-6">
                       <label for="name">NAME</label>
                       <input type="text" name="name" class="form-control" id="" placeholder="Enter full name here">
                    </div>
                   <div class="form-group col-md-6">
                       <label for="staff_student_id">STAFF NUMBER / STUDENT REGISTRATION NUMBER</label>
                       <input type="text" name="staff_student_id" class="form-control" id="" placeholder="Enter ID">
                    </div>

                  </div>

                  <div class="form-row">
                    <div class="form-group col-md-6">
                       <label for="phone">PHONE</label>
                       <input type="number" name="phone" class="form-control" id="" placeholder="Enter phone number">
                    </div>
                    <div class="form-group col-md-6">
                      <label for="email">INSTITUTIONAL EMAIL</label>
                      <input type="email" name="email" class="form-control" id="" placeholder="Enter your Institutional Email here">
                   </div>

                  </div>

                  <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="priority">PROBLEM CATEGORY</label>
                        
                        <!-- <select class="form-control" name="category">
                        
                          <option disabled selected >Select Category</option>
                          <%  cats.map((cat) => { %>
