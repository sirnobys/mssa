<!DOCTYPE html>
<html lang="en">
<%include partials/head.ejs%>
<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed sidebar-collapse">
<div class="wrapper">
  <!-- Navbar -->
  <%include partials/navbar.ejs%>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  <%include partials/sidebar.ejs%>
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
     <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Dashboard</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item "><a href="/dashboard">Home</a></li>
              <li class="breadcrumb-item active">Assigned Issues</li>
              <li class="breadcrumb-item "><a href="/completed">Completed</a></li>
              <li class="breadcrumb-item "><a href="/issues">New Issues</a></li>
            </ol>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    
           <section class="content">
      <div class="container-fluid">
        <div class="">
          
            
            <!-- /.card -->

            <div class="card">
              <div class="card-header bg-secondary">
                <h3 class="card-title">Assigned issues</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead class="bg-secondary">
                  <tr>
                    <th>Name</th>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Issue</th>
                    <th>Action</th>
                  </tr>
                  </thead>
                  <tbody>
                    <%  problem.map((problems) => { %>
                      <tr>
                       
                        <td><%= problems.name %></td>                   
                        <td><%= problems.staff_student_id%></td>
                        <td><%= problems.email%></td>  
                        <td><%= problems.phone%></td>  
                        <td><%= problems.issue%></td>
                        <td>
                           <div align="center">

                    
                       <a href="/complete/<%= problems.id %>"><button onclick="return confirm('sure you want to set this as completed?');" type="button" class=" my-1 btn  btn-outline-success btn-block btn-flat mr-auto ml-auto" data-toggle="tooltip" data-placement="top" title="Complete">
                        <i class="fas fa-check"></i>
                      </button>
                      </a>
                    

                      </div>
                        </td>                                                                                     
                      
                      </tr>
                      <% }) %>
                    
                  
            
                  
            
                  </tbody>
                  <tfoot class="bg-secondary">
                  <tr>
                    <th>Name</th>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Issue</th>
                    <th>Action</th>
                  </tr>
                  </tfoot>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
     
      <!-- /.container-fluid -->
    </section>
  </div>
  <!-- /.content-wrapper -->

 
  <!-- /.control-sidebar -->

  <!-- Main Footer -->
  <%include partials/footer.ejs%>
</div>
<!-- ./wrapper -->

<!-- REQUIRED SCRIPTS -->
<%include partials/scripts.ejs%>
</body>
</html>
