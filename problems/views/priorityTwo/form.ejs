 <section class="content">
            <div class="container-fluid">
            <div class="">
          
            
            <!-- /.card -->
            <div class="card card-primary">
                <div class="card-header bstyle card-title">
                  <center>Details</center>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form id="quickForm" action="/edit_issues" method="post">
                  <input type="hidden" name="id" value="<%= details.id%>">
                  <div class="card-body">
                    <div class="form-row">
                      <div class="form-group col-md-6">
                         <label for="name">Name</label>
                         <input type="text" name="name" value="<%= details.name%>" readonly class="form-control" id="" placeholder="Enter name">
                      </div>
                     <div class="form-group col-md-6">
                        <label for="email">Email</label>
                        <input type="email" name="email" value="<%= details.email%>" readonly class="form-control" id="" placeholder="Email">
                     </div>
  
                    </div>
  
                    <div class="form-row">
                      <div class="form-group col-md-6">
                         <label for="phone">Phone</label>
                         <input type="number" name="phone" value="<%= details.phone%>" readonly class="form-control" id="" placeholder="Enter phone">
                      </div>
                       <div class="form-group col-md-6">
                        <label for="priority">Assign To</label>
                        
                        <select class="form-control" name="assigned_to">
                        
                          <option disabled selected >Select Staff</option>
                          <% 
                               if(staff && staff.length > 0){
                              staff.map((row) => { %>
                          
                          <option><%=row.name%></option>
                          <% }) } %>
                        </select>
                     </div>
                     </div>
  
                    
  
                    <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="problem">Problem category</label>
                       <input name="category" class="form-control" value="<%= details.issue_category%>" readonly>
                     </div>
                     <div class="form-group col-md-6">
                        <label for="problem">Problem</label>
                       <input name="issue" class="form-control" value="<%= details.issue%>" readonly>
                     </div>
                      <div class="form-group col-md-6">
                        <label for="problem">Problem</label>
                       <textarea class="form-control" name="note"></textarea>
                     </div>
  
                    </div>
                  
                  </div>
                  <!-- /.card-body -->
                  <div class="card-footer">
                    <center>
                      <button onclick="return confirm('sure you want to assign?')" type="submit" class="btn btn-primary">      
                        <i class="fas fa-save"></i> Save!
                      </button>
                    </center> 
                  </div>
                </form>
              </div>
          
            <!-- /.card -->
          </div>
